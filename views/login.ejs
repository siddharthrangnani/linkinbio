  <body>
    <div class="d-flex justify-content-center" style="padding-top: 8%;">
      <div class="row">
        <div class=" col-sm-12 m-4 ">
          <div class="card ">
           
            <div class="card-body border border-success rounded">
              <h5 class="card-title text-center" style="font-family: 'Oswald', sans-serif; font-size: 25px;">LOGIN</h5>
              <form action="/login" method="post">
                <div class="form-group">
                  <label for="exampleInputEmail1">username</label>
                  <input type="text" class="form-control valUsername" name="username" id="exampleInputEmail1" aria-describedby="emailHelp"
                    placeholder="username" >

                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1">Password</label>
                  <input type="password" minlength="8" oninvalid="alert('minimum 8 characters')" class="form-control valPassword"  name="password" id="exampleInputPassword1" placeholder="Password"
                  >
                </div>
               
                <div>
                  <p>Dont Have an Account?<a href="/register">Create Here</a></p>
                </div>
               
                <button type="submit" class="btn dis-button btn-success">Signin</button>
                <% if(locals.errors){locals.errors.forEach(function(error){%>
                  <div class="alert alert-danger"><%= error.msg %></div>
              <% })} %>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script >
    $( ".valUsername, .valPassword" )
  .keyup(function() {
    var valueUsername = $(".valUsername").val().length;
    var valuePassword = $(".valPassword").val().length;
   if(valueUsername != '' && valuePassword >= 8)
   {
    $( "button" ).prop( "disabled",false);
   }
   else
   {
    $( "button" ).prop( "disabled",true);
   }
  })
  .keyup();
    
     
    
    
</script>
