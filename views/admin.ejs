  <div class="row">
    <div class="col-6 col-sm-6">

      <form action="/admin" method="post">
        <div class="userpanel-input ">
          <h3 class="mt-5 ml-3">Add Your Links</h3>
          <div class="input-group mb-3 col-lg-6 col-sm-6 ">
            <input type="text" name="linkTitle" class="form-control" placeholder="Enter Title" required>
          </div>
          <div class="input-group mb-3 col-lg-6 col-sm-6">
            <input type="text" name="linkUrl" class="form-control" placeholder="Enter link" required>
          </div>
          <div class="">
            <button type="submit" class="btn btn-success ml-3 ">Add Link</button>
          </div>

        </div>
        <div class="col-3 col-sm-4">
          <table class="table table-striped  ">
            <thead>
              <tr class="bg-success">
                <th scope="col"></th>
                <th scope="col">Title</th>
                <th scope="col">link</th>
                <th scope="col">Delete</th>
                <th scope="col">Edit</th>
              </tr>
            </thead>
            <% linkTitle.forEach(function(links){ %>
              <tbody>

                <tr>
                  <th scope="row"></th>
                  <td>
                    <%= links.linkTitle %>
                  </td>
                  <td><a href=<%=links.linkUrl %>><%= links.linkUrl %></a></td>
                  <td>
                    <form action="/delete" method="POST">
                      <input type="checkbox" name="checkbox" value="<%=links._id%>" onChange="this.form.submit()">
                  </td>
      </form>
      <td>
        <form action="/update" method="POST">
          <button type="button" style="background-color: chartreuse;" data-toggle="modal" data-target="#exampleModal"
            data-whatever="@mdo"><img src="img/edit.png" width="10" height="10" alt=""></button>

          <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Edit</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <form>
                    <div class="form-group">
                      <label for="recipient-name" class="col-form-label">New Title:</label>
                      <input type="text" name="updateTitle" class="form-control" id="recipient-name">
                    </div>
                    <div class="form-group">
                      <label for="message-text" class="col-form-label">New Url</label>
                      <input type="text" name="updateTitle" class="form-control" id="recipient-name"> 
                    </div>
                  </form>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  
                  <button type="submit" value="<%=links._id%>" class="btn btn-primary">Save Changes</button>
                </div>
              </div>
            </div>
          </div>

        </form>

      </td>
      </tr>

      </tbody>
      <% }) %>
        </table>
    </div>

<form action="/social" method="post">
    <div class="userpanel-input ">
      <h3 class="mt-5 ">Add Your Social Connections</h3>
      <!-- Example single danger button -->
    
      <div class="input-group mb-3 col-lg-6">
        <img class="footer-img mr-3 "  src="/img/instagram.png" alt="" width="30" height="31">
        <input type="text"  name="instagram" class="form-control" placeholder="Enter Instagram link">
      </div>

      <div class="input-group mb-3 col-lg-6">
        <img class="footer-img mr-3" src="/img/twitter.png" alt="" width="30 height="31">
        <input type="text"  name="twitter" class="form-control" placeholder="Enter twitter link">
      </div>
      <div class="input-group mb-3 col-lg-6">
        <img class="footer-img mr-3" src="/img/facebook.png" alt="" width="30"
              height="31">
        <input type="text"  name="facebook" class="form-control" placeholder="Enter facebook link">
      </div>
      <div class="input-group mb-3 col-lg-6">
        <img class="footer-img mr-3"  src="/img/youtube.png" alt="" width="30" height="31">
        <input type="text"  name="snapchat" class="form-control" placeholder="Enter YouTube link">
      </div>
      <div class="">
        <button type="submit" class="btn btn-success ml-3">Add Link</button>
      </div>

    </div>
    </form>


  </div>
  <div class="col-lg-5 mt-5  previewSite">
    <div class="embed-responsive embed-responsive-21by9  mt-1 mb-0" style="padding: 25% 10%;">
      <iframe class="embed-responsive-item" src="http://localhost:3000/<%= username %>"></iframe>
    </div>
  </div>
  


